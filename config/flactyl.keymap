#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define RUSSIAN 1
#define QWERTY  2
#define COLEMAK 3
#define APP_ONE 4
#define APP_TWO 5
#define ARROWS   6
#define SYMBOLS 7
#define NUMBERS 8
#define WINDOWS 9
